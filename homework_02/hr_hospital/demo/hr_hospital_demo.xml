<odoo>
    <!-- Демо дані для моделі Види Захворювань -->
    <record id="disease_flu" model="hr_hospital.disease">
        <field name="name">Flu</field>
        <field name="description">A common viral infection that can be deadly, especially in high-risk groups.</field>
    </record>
    <record id="disease_diabetes" model="hr_hospital.disease">
        <field name="name">Diabetes</field>
        <field name="description">A chronic condition that affects how your body turns food into energy.</field>
    </record>
    <record id="disease_hypertension" model="hr_hospital.disease">
        <field name="name">Hypertension</field>
        <field name="description">A condition in which the force of the blood against the artery walls is too high.</field>
    </record>

    <!-- Демо дані для моделі Лікарі -->
    <record id="doctor_john_doe" model="res.users">
        <field name="name">Dr. John Doe</field>
        <field name="login">johndoe</field>
        <field name="password">johndoe</field>
        <field name="specialty">Cardiology</field>
        <field name="is_doctor">True</field>
    </record>
    <record id="doctor_jane_smith" model="res.users">
        <field name="name">Dr. Jane Smith</field>
        <field name="login">janesmith</field>
        <field name="password">janesmith</field>
        <field name="specialty">General Medicine</field>
        <field name="is_doctor">True</field>
    </record>
    <record id="doctor_alex_brown" model="res.users">
        <field name="name">Dr. Alex Brown</field>
        <field name="login">alexbrown</field>
        <field name="password">alexbrown</field>
        <field name="specialty">Endocrinology</field>
        <field name="is_doctor">True</field>
    </record>

    <!-- Демо дані для моделі Пацієнти -->
    <record id="patient_jack_white" model="res.partner">
        <field name="name">Jack White</field>
        <field name="gender">male</field>
        <field name="is_patient">True</field>
    </record>
    <record id="patient_emma_jones" model="res.partner">
        <field name="name">Emma Jones</field>
        <field name="gender">female</field>
        <field name="is_patient">True</field>
    </record>
    <record id="patient_michael_green" model="res.partner">
        <field name="name">Michael Green</field>
        <field name="gender">male</field>
        <field name="is_patient">True</field>
    </record>

    <!-- Демо дані для моделі Візити -->
    <record id="visit_1" model="hr_hospital.visit">
        <field name="patient_id" ref="patient_jack_white"/>
        <field name="doctor_id" ref="doctor_jane_smith"/>
        <field name="date">2024-09-10 10:00:00</field>
        <field name="notes">Regular check-up</field>
    </record>
    <record id="visit_2" model="hr_hospital.visit">
        <field name="patient_id" ref="patient_emma_jones"/>
        <field name="doctor_id" ref="doctor_john_doe"/>
        <field name="date">2024-09-11 11:30:00</field>
        <field name="notes">Follow-up for heart condition</field>
    </record>
    <record id="visit_3" model="hr_hospital.visit">
        <field name="patient_id" ref="patient_michael_green"/>
        <field name="doctor_id" ref="doctor_alex_brown"/>
        <field name="date">2024-09-12 09:00:00</field>
        <field name="notes">Diabetes consultation</field>
    </record>
</odoo>
